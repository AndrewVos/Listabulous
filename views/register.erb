<script type="text/javascript">
$(document).ready(function () {
	$("form").validate({
		rules: {
			email: {
				required: true,
				email: true
			},
			display_name: {
				required: true
			},
			password: {
				required: true,
				minlength: 5
			},
			confirm_password: {
				required: true,
				equalTo: "password"
			}
		}
	});
});
</script>
<p>
	Please create an account by entering your details below.
</p>
<% if @user_exists %>
<div class="error">
	User already exists
</div>
<% end %>
<form method="post">
	<div>
		<fieldset>
			<legend>Register</legend>
			<p>
				<label for="email">
					Email:
				</label>
				<input type="text" name="email"></input>
			</p>
			<p>
				<label for="display_name">
					Display Name:
				</label>
				<input type="text" name="display_name"></input>
			</p>
			<p>
				<label for="password">
					Password:
				</label>
				<input type="password" name="password"></input>
			</p>
			<p>
				<label for="confirm_password">
					Confirm Password:
				</label>
				<input type="password" name="confirm_password"></input>
			</p>
			<p>
				<label for="remember">
					<input type="checkbox" name="remember"></input>
					Remember details?
				</label>
			</p>
			<input type="submit" value="Register"></input>
		</fieldset>
	</div>
</form>