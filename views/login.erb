<script type="text/javascript">
$(document).ready(function () {
	$("form").validate({
		rules: {
			email: {
				required: true,
				email: true
			},
			password: {
				required: true
			}
		}
	});
});
</script>
<p>
	Enter your email address and password to login. If you're a new user, click
	<a href="/register">here</a>
	to create an account.
</p>


<% if @login_failed %>
<div class="error">
	Login has failed
</div>
<% end %>

<form method="post">
	<div>
		<fieldset>
			<legend>Login</legend>
			<p>
				<label for="email">
					Email:
				</label>
				<input type="text" name="email"></input>
			</p>
			<p>
				<label for="password">
					Password:
				</label>
				<input type="password" name="password"></input>
			</p>
			<p>
				<label for="remember">
					<input type="checkbox" id="remember" name="remember"></input>
					Remember details?
				</label>
			</p>
			<p>
				<input type="submit" value="Login"></input>
			</p>
		</fieldset>
	</div>
</form>