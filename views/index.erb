<div id="ListItemEntryContainer">
	<div id="ChooseDefaultColour" style="background-color:  <%= escape_html @current_user.default_colour %>; ">
	</div>

	<div id="ListItemEntryBox">
		<input type="text" id="ListItemEntry" value="" />
	</div>
</div>
<div id="ListItems">
	<ul id="ListItemContainer">
		<% @current_user.list_items.each do |list_item| %>
		<li class="ListItem<%= list_item.complete ? " Complete" : "" %>">
			<input type="hidden" class="ListItemId" value="<%= list_item._id.to_s %>" />
			<div class="ChooseListItemColour" style="background-color: <%= escape_html list_item.colour %>">
			</div>
			<div class="DeleteListItem">
			</div>
			<div class="ListItemTitle">
				<%= escape_html list_item.text %>
			</div>
		</li>
		<% end %>
	</ul>
</div>
</div>